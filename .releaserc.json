{
  "tagFormat": "match-service-v${version}",
  "branches": ["main", { "name": "develop", "prerelease": "beta" }],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "scope": "match", "release": "minor" },
          { "type": "fix", "scope": "match", "release": "patch" },
          { "type": "perf", "scope": "match", "release": "patch" },
          { "type": "docs", "scope": "match", "release": false },
          { "type": "style", "scope": "match", "release": false },
          { "type": "refactor", "scope": "match", "release": "patch" },
          { "type": "test", "scope": "match", "release": false },
          { "type": "security", "scope": "match", "release": "patch" },
          { "type": "chore", "scope": "match", "release": false },
          { "type": "ci", "scope": "match", "release": false },
          { "type": "build", "scope": "match", "release": "patch" },
          { "breaking": true, "scope": "match", "release": "major" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "‚ú® Nouvelles fonctionnalit√©s" },
            { "type": "fix", "section": "üêõ Corrections" },
            { "type": "perf", "section": "‚ö° Optimisations" },
            { "type": "refactor", "section": "‚ôªÔ∏è Refactoring" },
            { "type": "docs", "section": "üìö Documentation", "hidden": false },
            { "type": "security", "section": "üîí S√©curit√©", "hidden": false },
            { "type": "ci", "section": "üîß CI/CD", "hidden": true },
            { "type": "chore", "section": "üßπ Maintenance", "hidden": true },
            { "type": "build", "section": "üì¶ Build", "hidden": false }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "package-lock.json"],
        "message": "chore(match): release v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "Dockerfile",
            "label": "Match Service Dockerfile v${nextRelease.version}"
          }
        ]
      }
    ]
  ]
}
